---
import BaseLayout from '../layouts/BaseLayout.astro';
import background from '../assets/background.svg';
---

<BaseLayout>
  <img id="background" src={background.src} alt="" fetchpriority="high" />

  <section id="hero" class="flex flex-col items-center justify-center text-center">
    <h1 class="text-5xl font-bold mb-8">Fletes DeGennaro</h1>
    <p class="text-2xl mb-8">🚛 ¡Llegamos para hacerte la vida más fácil!</p>
    <p class="text-lg mb-8">📦 Mudanzas, entregas, traslados programados y de urgencia.</p>
    <p class="text-lg mb-8">📍 Zona CABA y alrededores.</p>
    <p class="text-lg mb-8">📞 <a href="/contact" class="text-blue-600 underline hover:text-blue-800 transition">
      Consultanos sin compromiso
    </a></p>
    <a href="#gallery" class="px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition">
      Opiniones
    </a>
  </section>

  <section id="gallery" class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Nuestros clientes</h2>
      <div class="overflow-x-auto scrollbar-thin scrollbar-thumb-gray-300">
        <div class="flex space-x-6">
          <img src="../images/screen1.png" alt="Alejandro Carregal" class="w-64 h-auto rounded-lg shadow-lg flex-shrink-0">
          <img src="../images/screen2.png" alt="Nicolas & Aldo" class="w-64 h-auto rounded-lg shadow-lg flex-shrink-0">
          <img src="../images/screen3.png" alt="Silvina Fefer" class="w-64 h-auto rounded-lg shadow-lg flex-shrink-0">
          <img src="../images/screen4.png" alt="Malena & Katherine" class="w-64 h-auto rounded-lg shadow-lg flex-shrink-0">
          <img src="../images/screen5.png" alt="Nely Passaro" class="w-64 h-auto rounded-lg shadow-lg flex-shrink-0">
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#hero {
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}
</style>
